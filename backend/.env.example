# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGO_URI=your_mongodb_connection_string_here

# JWT Secret (change this in production)
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars

# JWT Expiry
JWT_EXPIRE=7d

# OTP Configuration
OTP_EXPIRY_MINUTES=10
SHOW_OTP_IN_CONSOLE=false

# Twilio Configuration (Optional - for production SMS)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Pincode API (Optional - uses fallback data if not configured)
# PINCODE_API_URL=https://api.postalpincode.in/pincode
# 2Factor OTP
TWOFACTOR_API_KEY=your_2factor_api_key_here
TWOFACTOR_BASE_URL=https://2factor.in/API/V1
TWOFACTOR_COUNTRY_CODE=91
